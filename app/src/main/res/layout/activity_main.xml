<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    tools:context=".MainActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="Welcome to Tic Tac Toe"
        android:textColor="@color/black"
        android:textSize="30sp" />
</LinearLayout>


<LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:onClick="onPlayGameClick"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/textViewPlayGame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#F0F3F4"
        android:gravity="center"
        android:text="Play Game"
        android:textColor="#CF1818"
        android:textSize="30sp" />
</LinearLayout>

<LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:onClick="onAboutClick"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginTop="2dp">

    <TextView
        android:id="@+id/textViewAboutGame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#F0F3F4"
        android:gravity="center"
        android:text="About"
        android:textColor="#CF1818"
        android:textSize="30sp" />
</LinearLayout>

</LinearLayout>